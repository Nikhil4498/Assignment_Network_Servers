# Step 1: Install Necessary Libraries
pip install requests
# Step 2: Write the Python Script
Create a file subdomain_status_checker.py
import requests
import time

subdomains = ["http://sub1.awesomeweb", "http://sub2.awesomeweb"]  # Add your subdomains here

def check_subdomains():
    print(f"{'Subdomain':<30}{'Status':<10}")
    print("-" * 40)
    for subdomain in subdomains:
        try:
            response = requests.get(subdomain, timeout=5)
            if response.status_code == 200:
                print(f"{subdomain:<30}Up")
            else:
                print(f"{subdomain:<30}Down")
        except requests.exceptions.RequestException:
            print(f"{subdomain:<30}Down")

if __name__ == "__main__":
    while True:
        check_subdomains()
        time.sleep(60)  # Check every 60 seconds

# Step 3: Test the Script
It should display the status of each subdomain every minute:
